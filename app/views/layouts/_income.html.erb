<h2>Income</h2>
<table id='income'>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  <% Income.this_month.each do |income| %>
    <tr>
      <td><%= short_date(income.date) %></td>
      <td><%= income.description %></td>
      <td><%= income.amount.format %></td>
    </tr>
  <% end %>
</table>