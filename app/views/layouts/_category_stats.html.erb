<h2>Stats</h2>
<table id='category-stats'>
  <tr>
    <th>
    <th>Category</th>
    <th>Spent</th>
    <th>Budget</th>
    <th>Remaining</th>
  </tr>
  <tbody id='monthly'>
    <tr><th>Monthly</th></tr>
    <% BudgetItem.monthly.each do |budget_item| %>
      <tr>
        <td></td>
        <td> <%= budget_item.category %> </td>
        <td> <%= budget_item.used_this_month.format %> </td>
        <td> <%= budget_item.amount.format %> </td>
        <td> <%= (budget_item.amount - budget_item.used_this_month).format %> </td>
      </tr>
    <% end %>
  </tbody>
  <tbody id='yearly'>
    <tr><th>Yearly</th></tr>
    <% BudgetItem.yearly.each do |budget_item| %>
      <tr>
        <td></td>
        <td> <%= budget_item.category %> </td>
        <td> <%= budget_item.used_this_month.format %> </td>
      </tr>
    <% end %>
  </tbody>

</table>