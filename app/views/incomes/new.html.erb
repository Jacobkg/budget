<h1><%= current_month %></h1>

<% Account.all.each do |account| %>
<div id='<%= to_html_id(account.name) %>-balance'>
  <%= account.name %> Balance: <%= account.balance.format %>
</div>
<% end %>
<br>

<h2>Income</h2>
<table id='income'>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  <% Income.all.each do |income| %>
    <tr>
      <td><%= short_date(income.date) %></td>
      <td><%= income.description %></td>
      <td><%= income.amount.format %></td>
    </tr>
  <% end %>
</table>

<%= form_for(Income.new) do |f| %>
  <%= label_tag 'income[date_string]', "Date" %>
  <%= text_field_tag 'income[date_string]', short_date(Date.today), :autofocus => true %>
  <%= f.label :description %>
  <%= f.text_field :description%>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <%= f.submit "Save" %>
<% end %>