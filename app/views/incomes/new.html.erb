<%= render 'layouts/header' %>
<%= render 'layouts/income' %>
<br>

<%= form_for(Income.new) do |f| %>
  <%= label_tag 'income[date_string]', "Date" %>
  <%= text_field_tag 'income[date_string]', short_date(Date.today), :autofocus => true %>
  <%= f.label :description %>
  <%= f.text_field :description%>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <%= f.submit "Save" %>
<% end %>